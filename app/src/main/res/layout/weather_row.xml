<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather_row_city_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weather_row_temperature_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="Rennes"
        android:background="@drawable/squared_border"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather_row_temperature_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather_row_city_tv"
        app:layout_constraintEnd_toStartOf="@+id/weather_row_weather_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="35,12Â°C"
        android:background="@drawable/squared_border"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/weather_row_weather_img"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather_row_temperature_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/squared_border"/>

</androidx.constraintlayout.widget.ConstraintLayout>